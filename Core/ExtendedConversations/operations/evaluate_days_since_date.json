{
  "key": "Evaluate Days Since Date",
  "label": "Check if days since date",
  "view": ["label", "inputs"],
  "scope": "condition",
  "category": "primary",
  "inputs": [
    {
      "label": "Date",
      "types": ["string"],
      "tooltip": "Format must be either: yyyy (3026), yyyy-MM (3026-01) or yyyy-MM-dd (3026-01-20)",
      "viewlabel": "'{value}'"
    },
    {
      "label": "Operation",
      "types": ["int"],
      "values": [
        { "viewlabel": "is less than", "text": "Less Than", "value": 1 },
        { "viewlabel": "is equal to", "text": "Equal To", "value": 2 },
        { "viewlabel": "is greater than", "text": "Greater Than", "value": 3 },
        {
          "viewlabel": "is less than, or equal to,",
          "text": "Less Than Or Equal To",
          "value": 4
        },
        {
          "viewlabel": "is greater than, or equal to,",
          "text": "Greater Than Or Equal To",
          "value": 5
        }
      ]
    },
    {
      "label": "Days",
      "types": ["operation", "int"],
      "viewlabel": "'{value}' days"
    }
  ]
}
